<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/edit_title_id"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="@string/title"
        android:textSize="25sp"
        android:background="@drawable/text_background"
        android:maxLines="1"
        android:textColor="#02202E"
        android:textStyle="bold"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/edit_desc_id"
        />
    <EditText
        android:id="@+id/edit_desc_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/edit_title_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="25sp"
        android:background="@drawable/text_background"
        android:hint="@string/description"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:textColor="#02202E"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_add"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="634dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#048CCA"
        />

</androidx.constraintlayout.widget.ConstraintLayout>